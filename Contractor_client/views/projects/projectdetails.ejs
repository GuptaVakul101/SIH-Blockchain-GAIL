          <a class="navbar-brand" href="/projects/completed" class="btn btn-lg" style="color: #9d9d9d;">Completed Projects</a>
          <% } else if (designation == "shipping-agency"){ %>
          <a class="navbar-brand" href="/" class="btn btn-lg" style="color: #9d9d9d;">Shipment</a>
          <a class="navbar-brand" href="/projects/allocated" class="btn btn-lg" style="color: #9d9d9d;">Allocated Projects</a>
          <% }%>
    
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarMenu" style="color: #9d9d9d;">
          <ul class="navbar-nav ml-auto" style="color: #9d9d9d;">
            <% if(!currentUser){ %>
            <li><a href="/login" class="navbar-brand btn-md" style="color: #9d9d9d;">Login</a></li>
            <li><a href="/register" class="navbar-brand btn btn-md" style="color: #9d9d9d;">SignUp</a></li>
            <% } else{ %>
            <li><a class="navbar-brand btn btn-md" href="/profile" style="color: #9d9d9d;">Signed In As
                <%= currentUser.toUpperCase() %> </a></li>
            <li><a href="/logout" class="navbar-brand btn btn-md" style="color: #9d9d9d;">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </nav>

    <div class="container px-1 px-md-4 py-5 mx-auto">
        <div class="card">
            <div class="row d-flex justify-content-between px-3 top">
                <div class="container-fluid" style="width: 50%;">
                    <% if(contractor_details.designation == "contractor" && project.type == "Product" && project.status == "in-progress"){ %>
                    <form style="float: right;" action="/projects/details" method="post">
                        <input type="hidden" name="status" value="manufactured" />
                        <input type="hidden" name="id" value="<%= projectID %>" />
                        <input class="btn btn-primary" type="submit" value="Product Manufactured" />
                    </form>
                    <% } else if(contractor_details.designation == "shipping-agency" && project.type == "Product") { %>
                        <% if(project.status=="manufactured") { %>
                        <form style="float: right;" action="/projects/details" method="post">
                            <input type="hidden" name="status" value="in-shipment" />
                            <input type="hidden" name="id" value="<%= projectID %>" />
                            <input class="btn btn-primary" type="submit" value="Initiate Shipping" />
                        </form>
                        <% } else if(project.status=="in-shipment"){ %>
                        <form style="float: right;" action="/projects/details" method="post">
                            <input type="hidden" name="status" value="in-pre-review" />
                            <input type="hidden" name="id" value="<%= projectID %>" />
                            <input class="btn btn-primary" type="submit" value="Deliver Product" />
                        </form>
                        <% } %>
                    <% } else if(contractor_details.designation == "contractor" && project.type == "Service" && project.status == "in-progress") { %>
                    <form style="float: right;" action="/projects/details" method="post">
                        <input type="hidden" name="status" value="in-pre-review" />
                        <input type="hidden" name="id" value="<%= projectID %>" />
                        <input class="btn btn-primary" type="submit" value="Submit Project" />
                    </form>
                    <% } %>
                </div>
                <div class="d-flex flex-column text-sm-right">
                    <p>Project Title: <span class="font-weight-bold"><%= project.title %></span></p>
                </div>
            </div> <!-- Add class 'active' to progress -->
            <div class="row d-flex justify-content-center">
                <div class="col-12">
                    <ul id="progressbar" class="text-center">
                        <% if(project.status == "in-progress"){ %>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <% } else if (project.status == "manufactured"){ %>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <% } else if (project.status == "in-shipment"){ %>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="step0"></li>
                        <li class="step0"></li>
                        <% } else if (project.status == "in-pre-review"){ %>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="step0"></li>
                        <% } else if (project.status == "in-review"){ %>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                        <li class="active step0"></li>
                    <% } %>
                    </ul>
                </div>
            </div>
            <div class="row justify-content-between top" style="width: 110%; position: relative; left: -50px">
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">Project<br>Allocated</p>
                    </div>
                </div>
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">In<br>Progress</p>
                    </div>
                </div>
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">Manufactured</p>
                    </div>
                </div>
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/TkPm63y.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">Order<br>En Route</p>
                    </div>
                </div>
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">In Pre<br>Review</p>
                    </div>
                </div>
                <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                    <div class="d-flex flex-column">
                        <p class="font-weight-bold">In Final<br>Review</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row row-divided">
            <div class="col-xl column-one" style="padding-top: 20px">
                <h3 align="center">Project Details</h3>
                <p>Title: <%= project.title %></p>
                <p>Description: <%= project.description %></p>
                <p>Status: <%= project.status %></p>
            </div>
            <div class="vertical-divider"></div>
            <div class="col-xl column-two" style="padding-top: 20px">
                <h3 align="center">Update progress</h3>
                <div style="width: 90%; margin: 25px auto;">
                    <form action="/projects/progress" method="post">

                        <div class="form-group">
                            <textarea class="form-control" type="textarea" rows="4" name="description" resize="vertical"
                                placeholder="Progress" required="true"></textarea>
                        </div>
                        <input type="hidden" name="id" value="<%= project.id %>" />
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 20px; margin-bottom: 40px">
        <h3>Remarks</h3>
        <% for(var idx in progress) { %>
        <% const temp = progress[idx]; %>
        <div class="card" style="margin-bottom: 10px">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p style="font-size: 16px"><%= temp.description %></p>
                    <% var givenDate = new Date(parseInt(temp.timestamp)); %>
                    <footer class="blockquote-footer" style="font-size: 14px; margin-top: -10px">
                        <%= givenDate.toLocaleString() %><cite title="Source Title"></cite></footer>
                </blockquote>
            </div>
        </div>
        <% } %>
    </div>
</body>

</html>
